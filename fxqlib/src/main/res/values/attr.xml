<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="RoundProgressBar">
        <attr name="roundColor" format="color" />
        <attr name="roundProgressColor" format="color" />
        <attr name="roundWidth" format="dimension"/>
        <attr name="textColor" format="color" />
        <attr name="textSize" format="dimension" />
        <attr name="max" format="integer"/>
        <attr name="textIsDisplayable" format="boolean"/>
        <attr name="anticlockwise" format="boolean"/>
        <attr name="variousDisplay" format="boolean"/>
        <attr name="variousInverse" format="boolean"/>
        <attr name="variousPart1" format="string"/>
        <attr name="variousPart2" format="string"/>
        <attr name="variousRoundWidthDv" format="dimension" />
        <attr name="displayGap" format="boolean" />
        <attr name="displayOneByOne" format="boolean" />
        <attr name="roundProgressColorFirst" format="color" />
        <attr name="roundProgressColorSecond" format="color" />
        <attr name="roundProgressColorThird" format="color" />
        <attr name="roundProgressStyleFirst" format="integer" />
        <attr name="roundProgressStyleSecond" format="integer" />
        <attr name="roundProgressStyleThird" format="integer" />
        <attr name="roundProgressFirst" format="integer" />
        <attr name="roundProgressSecond" format="integer" />
        <attr name="style">
            <enum name="STROKE" value="0"></enum>
            <enum name="FILL" value="1"></enum>
        </attr>
    </declare-styleable>
    <declare-styleable name="CustomRangeSeekBar">
        <attr name="csb_enabled" format="boolean|reference"/>
        <attr name="csb_min" format="integer|reference|float"/>
        <attr name="csb_max" format="integer|reference|float"/>
        <attr name="csb_progress" format="integer|reference"/>
        <attr name="csb_track_size" format="dimension|reference"/>
        <attr name="csb_second_track_size" format="dimension|reference"/>
        <attr name="csb_thumb_radius" format="dimension|reference"/>
        <attr name="csb_thumb_radius_on_dragging" format="dimension|reference"/>
        <attr name="csb_section_radius" format="dimension|reference"/>
        <attr name="csb_section_count" format="integer|reference"/>
        <attr name="csb_thumb_color" format="color|reference"/>
        <attr name="csb_track_color" format="color|reference"/>
        <attr name="csb_second_track_color" format="color|reference"/>
        <attr name="csb_show_text" format="boolean"/>
        <attr name="csb_text_size" format="dimension|reference"/>
        <attr name="csb_text_color" format="color|reference"/>
        <attr name="csb_show_section_mark" format="boolean"/>
        <attr name="csb_show_all_section_value" format="boolean"/>
        <attr name="csb_auto_adjust_section_mark" format="boolean"/>
        <attr name="csb_show_progress_in_float" format="boolean"/>
        <attr name="csb_anim_duration" format="integer"/>
        <attr name="csb_section_list" format="reference" />
        <attr name="csb_separation_section" format="integer" />
        <attr name="csb_auto_adjust_section_Duration" format="integer" />
    </declare-styleable>

    <declare-styleable name="AutoVerticalScrollTextview">
        <attr name="android:textSize" />
        <attr name="android:textColor" />
        <attr name="android:text" />
        <attr name="avs_paddingLeft" format="dimension" />
        <attr name="avs_paddingRight" format="dimension" />
        <attr name="avs_paddingTop" format="dimension" />
        <attr name="avs_paddingBottom" format="dimension" />
        <attr name="avs_gravity_center" format="boolean"/>
    </declare-styleable>

</resources>